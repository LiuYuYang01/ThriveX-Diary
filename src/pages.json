{
	"easycom": {
        "autoscan": true,
        "custom": {
            "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
        }
    },
	"pages": [
		{
			"path": "pages/diary/index",
			"style": {
				"navigationBarTitleText": "碎碎念"
			}
		},
		{
			"path": "pages/my/index",
			"style": {
				"navigationBarTitleText": "我的"
			}
		}
	],
	"subPackages": [
		{
			"root": "sub_packages",
			"pages": [
				{
					"path": "release/index",
					"style": {
						"navigationBarTitleText": "写日记"
					}
				}
			]
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarBackgroundColor": "#42b983",
		"navigationStyle": "custom"
	},
	"tabBar": {
		"color": "#333333",
		"selectedColor": "#42b983",
		"backgroundColor": "#fff",
		"borderStyle": "black",
		"list": [
			{
				"pagePath": "pages/diary/index",
				"text": "日记",
				"iconPath": "static/images/tabbar/record.png",
				"selectedIconPath": "static/images/tabbar/record_select.png"
			},
			{
				"pagePath": "pages/my/index",
				"text": "我的",
				"iconPath": "static/images/tabbar/my.png",
				"selectedIconPath": "static/images/tabbar/my_select.png"
			}
		]
	}
}